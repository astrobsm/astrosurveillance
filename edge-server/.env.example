# ASTROSURVEILLANCE - Environment Configuration
# Copy this file to .env and fill in your values

# Server
NODE_ENV=production
PORT=3080
HOST=0.0.0.0

# PostgreSQL Database
# Get these from your database provider (DigitalOcean, Supabase, Neon, etc.)
DB_HOST=your-database-host.db.ondigitalocean.com
DB_PORT=25060
DB_NAME=astrosurveillance
DB_USER=doadmin
DB_PASSWORD=your-password-here
DB_SSL=true

# Alarm Settings
ALARM_DURATION=10
ALARM_ENABLED=true

# Recording Settings
RECORDING_DURATION=60
RECORDING_FORMAT=mp4

# Motion Detection
MOTION_THRESHOLD=15
MOTION_SENSITIVITY=medium

# Security
ADMIN_PIN=1234
